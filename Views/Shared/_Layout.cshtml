<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @* <title>@ViewData["Title"] - supersportgallert</title> *@
    <title>Super Gallery - @ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/supersportgallert.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body class="bg-secondary d-flex flex-column min-vh-100">

    <!-- HEADER -->
    <header>
        <!-- NAVBAR -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-3 px-4">
            <a href="#" class="navbar-brand">SUPER GALLERY</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item"><a href="#" class="nav-link">Legendary Motor Sports</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Warstock Cache & Carry</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Southern San Andreas Super Autos</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Dock Tease</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Elitas Travel</a></li>
                </ul>
            </div>
            <div class="d-flex">
                <a href="" class="nav-link text-white me-2"><i class="bi bi-search"></i></a>
                <a href="" class="nav-link text-white me-2"><i class="bi bi-cart"></i></a>
                <a href="" class="nav-link text-white"><i class="bi bi-person"></i></a>
            </div>
        </nav>

    </header>

    <!-- BODY -->
    <div class="container">
        <main role="main" class="flex-grow-1">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="bg-dark text-white text-center py-5">
        &copy; 2025 SUPER GALLERY. All rights reserved. Çok uğraşma :D
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
